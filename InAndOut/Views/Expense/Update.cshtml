@model InAndOut.Models.ViewModels.ExpenseVM
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container">
    <div class="row u-pad-x">
        <div class="col-6">
            <h3>Update Expense</h3>
        </div>
        <div class="col-6">
             <a class="btn btn-primary float-right" asp-controller="Expense" asp-action="Index">Go Back</a>
        </div>
    </div>
    <div class="row u-pad-x">
        <div class="col-12">
           <form method="POST" asp-action="Update">
                <input asp-for="Expense.Id" hidden/>
                <div class="form-group">
                    <label asp-for="Expense.ExpenseName"></label>
                    <input asp-for="Expense.ExpenseName"  class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Expense.Amount"></label>
                    <input  asp-for="Expense.Amount"  class="form-control"/>
                </div>
                <div class="form-group">
                    <select asp-for="Expense.ExpenseCategoryId" asp-items="@Model.CategoryDropDown">
                        <option selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Expense.ExpenseCategoryId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger w-100 my-1">Update</button>
                <button asp-action="Index" class="btn btn-success w-100 my-1">Back</button>
            </form>
        </div>
    </div>
</div>