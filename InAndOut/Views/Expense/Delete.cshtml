@model InAndOut.Models.Expense
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container">
    <div class="row u-pad-x">
        <div class="col-6">
            <h3>Delete Expense</h3>
        </div>
        <div class="col-6">
             <a class="btn btn-primary float-right" asp-controller="Expense" asp-action="Index">Go Back</a>
        </div>

     
    </div>
    <div class="row u-pad-x">
        <div class="col-12">
           <form method="POST" asp-action="DeletePost">
                <input asp-for="Id" hidden/>
                <div class="form-group">
                    <label asp-for="ExpenseName"></label>
                    <input asp-for="ExpenseName" disabled class="form-control"/>
        
                </div>
                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input  asp-for="Amount" disabled class="form-control"/>
                </div>
                <button type="submit" class="btn btn-danger w-100 my-1">Delete</button>
                <button asp-action="Index" class="btn btn-success w-100 my-1">Back</button>
            </form>
        </div>
    </div>
</div>