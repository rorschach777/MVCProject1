@model IEnumerable<InAndOut.Models.ExpenseCategory>
    
<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2>Expense Categories</h2>
            </div>
            <div class="col-6">
               <a class="btn btn-primary" asp-controller="ExpenseCategory" asp-action="Create">Create Expense Category</a>
            </div>
        </div>

    @if(Model.Count() > 0)
    {
        <div class="row">
            <div class="col-12">
                     <table style="width: 100%">
                <thead>
                    <tr>
                        <th class="">
                            Item Name
                        </th>
                        <th>
                            Item Actions
                        </th>
                  
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expenseCategory in Model)
                    {
                        <tr>
                             <td width="30%">@expenseCategory.Name</td>
                             <td width="50">
                                  <a asp-controller="ExpenseCategory" asp-action="Update" asp-route-Id="@expenseCategory.Id" class="btn btn-primary mx-1">Update</a>
                                  <a asp-controller="ExpenseCategory" asp-action="Delete" asp-route-Id="@expenseCategory.Id" class="btn btn-danger mx-1">Delete</a>
                              </td>
                        </tr>
                    }
                </tbody>
              </table>
            </div>
        </div>
   
    }
    else
    {
        <p>No Items are created yet.</p>
    }
    </div>
