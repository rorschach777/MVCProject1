@model IEnumerable<InAndOut.Models.Item>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2>Borrowed Items List</h2>
            </div>
            <div class="col-6">
               <a class="btn btn-primary" asp-controller="Item" asp-action="Create">Create Item</a>
            </div>
        </div>

    @if(Model.Count() > 0)
    {
        <table>
                <thead>
                    <tr>
                        <th class="">
                            Item Name
                        </th>
                        <th>
                            Borrower
                        </th>
                        <th>
                            Lender
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                             <td width="30%">@item.ItemName</td>
                             <td width="30%">@item.Borrower</td>
                             <td width="30%">@item.Lender</td>
                        </tr>
                    }
                </tbody>
              </table>
    }
    else
    {
        <p>No Items are created yet.</p>
    }
    </div>
