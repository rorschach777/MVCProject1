@model InAndOut.Models.Item
@Html.ValidationSummary()
<form method="POST" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <div>
            <h3>Add An Item</h3>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ItemName"></label>
            </div>
            <div class="col-4">
                 <label asp-for="Borrower"></label>
            </div>
            <div class="col-4">
                  <label asp-for="Lender"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
               <input asp-for="ItemName" class="form-control"/>
               <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="col-4">
                  <input asp-for="Borrower" class="form-control"/>
                  <span asp-validation-for="Borrower" class="text-danger"></span>
            </div>
            <div class="col-4">
                    <input asp-for="Lender" class="form-control"/>
                    <span asp-validation-for="Lender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input class="btn btn-info w-75" type="submit" value="Create"/>
                </div>
                <div class="col">
                    <a asp-controller="Item" asp-action="Index" class="btn btn-danger  w-75"  >Go Back</a>
                </div>
            </div>
       
        </div>
    </div>
</form>
@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />}
}